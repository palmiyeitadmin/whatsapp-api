{
  "name": "cf-infobip-broadcaster",
  "version": "1.0.0",
  "description": "A serverless WhatsApp bulk messaging application running on Cloudflare Pages with Google Contacts synchronization and Infobip API integration",
  "main": "index.js",
  "scripts": {
    "build": "npx tailwindcss -i ./public/styles/input.css -o ./public/styles/output.css --minify",
    "build:watch": "npx tailwindcss -i ./public/styles/input.css -o ./public/styles/output.css --watch",
    "dev": "wrangler pages dev public --compatibility-date=2023-12-01",
    "deploy": "wrangler pages deploy public",
    "deploy:staging": "wrangler pages deploy public --env staging",
    "deploy:production": "wrangler pages deploy public --env production",
    "db:migrate": "wrangler d1 execute CF_INFOBIP_DB --file=./db/schema.sql",
    "db:local": "wrangler d1 execute CF_INFOBIP_DB --local --file=./db/schema.sql",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint functions/**/*.js public/**/*.js",
    "lint:fix": "eslint functions/**/*.js public/**/*.js --fix",
    "git:push": "bash scripts/deploy.sh",
    "git:push:windows": "scripts/deploy.bat"
  },
  "keywords": [
    "cloudflare",
    "whatsapp",
    "infobip",
    "serverless",
    "messaging"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "wrangler": "^3.0.0",
    "@cloudflare/workers-types": "^4.0.0",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "playwright": "^1.40.0",
    "@playwright/test": "^1.40.0",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "tailwindcss": "^3.4.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10"
  },
  "dependencies": {
    "googleapis": "^128.0.0"
  }
}